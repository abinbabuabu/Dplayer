<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:android="http://schemas.android.com/apk/res/android"
                                                   style="@style/Widget.MaterialComponents.CardView"
                                                   android:stateListAnimator="@animator/lift_on_click"
                                                   app:cardCornerRadius="@dimen/cardRadius"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:layout_marginLeft="@dimen/leftRight"
                                                   android:layout_marginRight="@dimen/leftRight"
                                                   android:layout_marginBottom="@dimen/bottomUp"
                                                   android:layout_marginTop="@dimen/bottomUp"
                                                   app:cardElevation="@dimen/cardElevation"
                                                   android:id="@+id/materialCardView">
    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/song_layout">
        <TextView
                android:text="TextView"
                style="@style/ArtistName"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/artistname_tv"
                android:textAllCaps="false"
                app:layout_constraintStart_toStartOf="@+id/songname_tv" android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/songname_tv"
                app:layout_constraintEnd_toEndOf="@+id/songname_tv"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"
                />
        <TextView
                android:text="TextView"
                style="@style/SongName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:id="@+id/songname_tv" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="64dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="64dp"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toEndOf="@+id/include" android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp" app:layout_constraintHorizontal_bias="0.01"/>
        <include layout="@layout/rounded_image" android:layout_height="@dimen/songImageHeight"
                 android:layout_width="@dimen/songImageWidth"
                 app:layout_constraintBottom_toBottomOf="parent"
                 app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintTop_toTopOf="parent"
                 app:layout_constraintVertical_bias="0.0"
                 android:id="@+id/include"/>

        <androidx.appcompat.widget.AppCompatImageButton android:layout_width="40dp"
                                                        android:padding="16dp"
                                                        android:clickable="true"
                                                        android:foreground="?attr/actionBarItemBackground"
                                                        android:background="#00000000"
                                                        android:id="@+id/options_menu_song"
                                                        app:srcCompat="@drawable/ic_more_vert_black_24dp"
                                                        android:layout_height="48dp"
                                                        android:layout_centerHorizontal="true"
                                                        android:layout_centerVertical="true"
                                                        app:layout_constraintEnd_toEndOf="parent"
                                                        app:layout_constraintTop_toTopOf="parent"
                                                        app:layout_constraintBottom_toBottomOf="parent"
                                                        app:layout_constraintStart_toEndOf="@+id/songname_tv"
                                                        android:layout_marginStart="8dp"
                                                        android:layout_marginLeft="8dp"
                                                        app:layout_constraintHorizontal_bias="1.0"
                                                        android:scaleType="center"
        />


    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>