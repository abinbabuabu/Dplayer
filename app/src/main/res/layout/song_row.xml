<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:android="http://schemas.android.com/apk/res/android"
                                                   style="@style/Widget.MaterialComponents.CardView"
                                                   app:strokeColor="@color/colorAccent"
                                                   app:strokeWidth="0.2dp"
                                                   android:layout_margin="8dp"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/song_layout">
        <TextView
                android:text="TextView"
                android:layout_width="140dp"
                android:layout_height="30dp" android:id="@+id/artistname_tv"
                android:textSize="@dimen/ArtistName" android:textAllCaps="false"
                app:layout_constraintStart_toStartOf="@+id/songname_tv" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/songname_tv"
                app:layout_constraintEnd_toEndOf="@+id/songname_tv"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.02"/>
        <TextView
                android:text="TextView"
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:textStyle="bold" android:textSize="@dimen/SongTextSize"
                android:id="@+id/songname_tv" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="136dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="136dp"
                app:layout_constraintVertical_bias="0.177"/>
        <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/song_image"
                android:layout_width="66dp"
                android:layout_height="66dp"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"
                android:src="@drawable/aaa" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/songname_tv"
                android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.17"
                app:layout_constraintVertical_bias="0.0"/>


        <androidx.appcompat.widget.AppCompatImageButton android:layout_width="40dp"
                                                        android:padding="8dp"
                                                        android:clickable="true"
                                                        android:foreground="?attr/actionBarItemBackground"
                                                        android:background="#00000000"
                                                        android:id="@+id/options_menu_song"
                                                        app:srcCompat="@drawable/ic_more_vert_black_24dp"
                                                        android:layout_height="48dp"
                                                        android:layout_centerHorizontal="true"
                                                        android:layout_centerVertical="true"
                                                        app:layout_constraintEnd_toEndOf="parent"
                                                        app:layout_constraintTop_toTopOf="parent"
                                                        app:layout_constraintBottom_toBottomOf="parent"
                                                        android:layout_marginEnd="8dp"
                                                        android:layout_marginRight="8dp"
                                                        app:layout_constraintStart_toEndOf="@+id/songname_tv"
                                                        android:layout_marginStart="8dp"
                                                        android:layout_marginLeft="8dp"
                                                        app:layout_constraintHorizontal_bias="1.0"
                                                        android:scaleType="fitCenter"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>