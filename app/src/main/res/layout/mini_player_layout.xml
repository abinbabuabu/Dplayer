<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mini_player_small"
            android:background="@color/SimpleWhite"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView android:layout_width="163dp" android:layout_height="wrap_content" android:text="SAMPLE"
                  android:textSize="24sp"
                  android:id="@+id/textView" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                  android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintVertical_bias="0.488"
                  android:textStyle="bold" android:layout_marginStart="92dp"
                  app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginLeft="92dp"/>
        <com.google.android.exoplayer2.ui.PlayerControlView android:layout_width="54dp"
                                                            android:id="@+id/mini_player"
                                                            android:layout_height="54dp"
                                                            android:layout_gravity="center"
                                                            android:visibility="visible"
                                                            app:show_timeout="0"
                                                            android:layout_weight="0.8"
                                                            app:controller_layout_id="@layout/mini_player"
                                                            app:layout_constraintEnd_toEndOf="parent"
                                                            android:layout_marginEnd="16dp"
                                                            android:layout_marginRight="16dp"
                                                            app:layout_constraintTop_toTopOf="parent"
                                                            app:layout_constraintStart_toEndOf="@+id/textView"
                                                            android:layout_marginStart="8dp"
                                                            android:layout_marginLeft="8dp"
                                                            app:layout_constraintHorizontal_bias="1.0"
                                                            android:layout_marginTop="8dp"
                                                            app:layout_constraintBottom_toBottomOf="parent"
                                                            android:layout_marginBottom="8dp"
                                                            app:layout_constraintVertical_bias="0.62"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

