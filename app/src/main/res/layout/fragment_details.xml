<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">


    <Button
            android:text="Shuffle"
            android:background="@drawable/round_button"
            android:layout_width="172dp"
            android:layout_height="wrap_content" android:id="@+id/button1"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="16dp"
            app:layout_constraintStart_toEndOf="@+id/play_button"
            android:layout_marginStart="8dp" android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/cardView2"/>
    <Button
            android:text="Play"
            android:background="@drawable/round_button"
            android:layout_width="172dp"
            android:layout_height="wrap_content" android:id="@+id/play_button"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            android:layout_marginTop="48dp" app:layout_constraintTop_toBottomOf="@+id/cardView2"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/recyclerView2"
            app:layout_constraintVertical_bias="0.0"/>
    <androidx.cardview.widget.CardView
            android:stateListAnimator="@animator/lift_on_click"
            android:layout_width="208dp"
            android:layout_height="208dp" app:layout_constraintEnd_toEndOf="parent"
            app:cardCornerRadius="8dp"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="64dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.497" android:id="@+id/cardView2">
        <ImageView
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:background="@drawable/round_button"
                android:layout_height="match_parent"
                android:src="@drawable/aaa"
                android:id="@+id/imageView4"/>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView android:layout_width="match_parent"
                                               android:layout_height="wrap_content"
                                               app:layout_constraintEnd_toEndOf="parent"
                                               android:layout_marginEnd="16dp"
                                               android:layout_marginRight="16dp"
                                               app:layout_constraintStart_toStartOf="parent"
                                               android:layout_marginLeft="16dp"
                                               android:layout_marginStart="16dp"
                                               app:layout_constraintHorizontal_bias="0.0"
                                               android:layout_marginBottom="8dp"
                                               app:layout_constraintBottom_toBottomOf="parent"
                                               android:layout_marginTop="16dp"
                                               app:layout_constraintTop_toBottomOf="@+id/button1"
                                               app:layout_constraintVertical_bias="0.165"
                                               android:id="@+id/recyclerView2">

    </androidx.recyclerview.widget.RecyclerView>


</androidx.constraintlayout.widget.ConstraintLayout>