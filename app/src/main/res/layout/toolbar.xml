<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:background="@drawable/gradient_main"
        app:popupTheme="@style/AppTheme.PopupOverlay">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  style="@style/AppTitle" android:layout_height="wrap_content" android:layout_centerVertical="true"
                  android:layout_centerHorizontal="true" android:text="Christian Spot"/>
    </RelativeLayout>

</androidx.appcompat.widget.Toolbar>