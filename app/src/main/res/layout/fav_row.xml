<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                                   xmlns:android="http://schemas.android.com/apk/res/android"
                                   android:stateListAnimator="@animator/lift_on_click"
                                   android:layout_width="match_parent"
                                   android:layout_marginBottom="1dp"
                                   android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/song_layout">
        <TextView
                android:text="TextView"
                android:layout_width="140dp"
                android:layout_height="30dp" android:id="@+id/artistname_tv"
                android:textSize="@dimen/ArtistName" android:textAllCaps="false"
                app:layout_constraintStart_toStartOf="@+id/songname_tv" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/songname_tv"
                app:layout_constraintEnd_toEndOf="@+id/songname_tv"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.02"/>
        <TextView
                android:text="TextView"
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:textStyle="bold" android:textSize="@dimen/SongTextSize"
                android:id="@+id/songname_tv" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="136dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="136dp"
                app:layout_constraintVertical_bias="0.177"/>
        <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/song_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"
                android:src="@drawable/aaa" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/songname_tv"
                android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.17"
                app:layout_constraintVertical_bias="0.0"/>
        <RelativeLayout android:layout_width="74dp" android:layout_height="0dp"
                        android:id="@+id/options_layout"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
                        app:layout_constraintEnd_toEndOf="parent"
        >
            <androidx.appcompat.widget.AppCompatImageButton android:layout_width="42dp"

                                                            android:background="#00000000"
                                                            android:id="@+id/add_to_fav"
                                                            app:srcCompat="@drawable/ic_fav"
                                                            android:layout_height="42dp"
                                                            android:layout_centerInParent="true"
                                                            android:scaleType="fitCenter"/>

        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>