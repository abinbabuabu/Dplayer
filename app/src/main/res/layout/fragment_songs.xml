<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent"
                                                   android:background="@drawable/rounded_layout"
                                                   android:layout_height="match_parent">

    <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer_fav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:visibility="visible"
    >
        <LinearLayout
                android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent"
                android:visibility="visible">

            <include layout="@layout/place_holder_song_layout"></include>
            <include layout="@layout/place_holder_song_layout"></include>
            <include layout="@layout/place_holder_song_layout"></include>
            <include layout="@layout/place_holder_song_layout"></include>

        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>
    <LinearLayout
            android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="62dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/media_buttons" app:layout_constraintHorizontal_bias="1.0" android:visibility="gone">
        <com.google.android.material.button.MaterialButton android:layout_width="172dp"
                                                           style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                                                           app:icon="@drawable/ic_shuffle"
                                                           android:id="@+id/shuffle"
                                                           android:layout_marginEnd="12dp"
                                                           android:text="Shuffle"
                                                           app:iconPadding="12dp"
                                                           app:cornerRadius="50dp"
                                                           app:iconSize="18dp"
                                                           android:layout_height="60dp"
                                                           android:layout_marginRight="4dp"
                                                           app:iconGravity="textStart"/>
        <com.google.android.material.button.MaterialButton android:layout_width="172dp"
                                                           android:id="@+id/play_all"
                                                           android:layout_marginStart="12dp"
                                                           style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                                                           app:icon="@drawable/ic_play"
                                                           android:text="Play"
                                                           app:cornerRadius="50dp"
                                                           app:iconPadding="12dp"
                                                           app:iconSize="24dp"
                                                           android:layout_height="60dp"
                                                           android:layout_marginLeft="12dp"
                                                           app:iconGravity="textStart"/>

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView android:layout_width="match_parent"
                                               android:id="@+id/recyclerView"
                                               android:layout_height="0dp"
                                               app:layout_constraintStart_toStartOf="parent"
                                               app:layout_constraintEnd_toEndOf="parent"
                                               app:layout_constraintBottom_toBottomOf="parent"
                                               app:layout_constraintTop_toBottomOf="@+id/media_buttons"
                                               android:visibility="visible">
    </androidx.recyclerview.widget.RecyclerView>
</androidx.constraintlayout.widget.ConstraintLayout>



