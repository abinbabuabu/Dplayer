<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@drawable/nav_gradient"
                                                   xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout android:orientation="vertical" android:layout_width="200dp"
                  android:gravity="center"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
                  app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.497"
                  android:layout_height="250dp" android:id="@+id/linearLayout2">
        <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/song_image"
                android:layout_gravity="center"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"
                android:src="@drawable/aaa"
        />
        <TextView
                android:text="Abin Babu"
                android:layout_margin="4dp"
                style="@style/ProfileName"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView2"
        />
        <TextView
                android:text="Edit Profile"
                android:layout_margin="2dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView3"
                style="@style/EditProfile"/>
    </LinearLayout>

    <View android:layout_width="match_parent" android:layout_height="0dp" android:background="@color/SimpleWhite"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toTopOf="@+id/linearLayout" app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintBottom_toBottomOf="@+id/linearLayout" android:layout_marginTop="32dp"/>
    <LinearLayout android:orientation="vertical" android:gravity="center_horizontal"
                  android:paddingTop="50dp"
                  android:background="@drawable/rounded_layout"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  app:layout_constraintStart_toStartOf="parent"
                  android:id="@+id/linearLayout"
                  app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintTop_toBottomOf="@+id/linearLayout2" app:layout_constraintHorizontal_bias="0.0"
                  >
        <com.google.android.material.button.MaterialButton
                app:strokeWidth="0dp"
                app:iconPadding="0dp"
                app:iconGravity="start"
                android:insetRight="24dp"
                app:icon="@drawable/ic_outline_share"
                style="@style/NavButtons"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textColor="@color/Black"
                android:textAllCaps="false"
                android:text="Share"
        />
        <com.google.android.material.button.MaterialButton
                app:strokeWidth="0dp"
                app:iconPadding="0dp"
                app:iconGravity="start"
                android:insetRight="8dp"
                app:icon="@drawable/ic_support"
                style="@style/NavButtons"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textColor="@color/Black"
                android:textAllCaps="false"
                android:text="Support"
        />
        <com.google.android.material.button.MaterialButton
                app:strokeWidth="0dp"
                app:iconPadding="6dp"
                app:iconGravity="start"
                android:insetLeft="2dp"
                app:icon="@drawable/ic_feedback"
                style="@style/NavButtons"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textColor="@color/Black"
                android:textAllCaps="false"
                android:text="Feedback"
        />
        <com.google.android.material.button.MaterialButton
                app:strokeWidth="0dp"
                app:iconPadding="10dp"
                app:iconSize="20dp"
                app:iconGravity="textStart"

                android:insetRight="18dp"
                app:icon="@drawable/ic_logout"
                style="@style/NavButtons"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textColor="@color/Black"
                android:textAllCaps="false"
                android:text="Logout"
        />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
