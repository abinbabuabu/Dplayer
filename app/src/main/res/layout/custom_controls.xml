<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
    <TextView
            android:text="00.00"
            android:layout_height="wrap_content" android:id="@+id/exo_duration" android:layout_width="wrap_content"
            style="@style/timeText"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintStart_toStartOf="@+id/guideline" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/exo_progress"/>

    <TextView
            android:text="00.00"
            style="@style/timeText"
            android:layout_height="wrap_content" android:id="@+id/exo_position" android:layout_width="wrap_content"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/exo_progress"
            android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <com.google.android.exoplayer2.ui.DefaultTimeBar android:layout_width="match_parent"
                                                     app:scrubber_color="@color/scrubberColor"
                                                     app:played_color="@color/Orange"
                                                     app:buffered_color="@color/LightOrange"
                                                     app:unplayed_color="@color/grey"
                                                     android:visibility="visible"
                                                     android:id="@+id/exo_progress"
                                                     android:layout_height="wrap_content"
                                                     app:layout_constraintStart_toStartOf="parent"
                                                     android:layout_marginLeft="16dp"
                                                     android:layout_marginStart="16dp"
                                                     app:layout_constraintEnd_toEndOf="parent"
                                                     android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
                                                     app:layout_constraintHorizontal_bias="0.0"
                                                     android:layout_marginBottom="220dp"
                                                     app:layout_constraintBottom_toBottomOf="parent"
    />
    <ImageButton
            app:srcCompat="@drawable/ic_next"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_width="66dp"
            android:layout_height="60dp"
            android:scaleType="fitCenter"
            android:layout_marginEnd="80dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="80dp"
            android:layout_marginBottom="92dp" app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/exo_next"
    />
    <ImageButton
            app:srcCompat="@drawable/ic_prev"
            android:layout_width="66dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_height="60dp"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="PlayButton"
            android:layout_marginLeft="72dp" android:layout_marginStart="72dp"
            android:id="@+id/exo_prev"
            app:layout_constraintBottom_toBottomOf="@+id/exo_next" android:adjustViewBounds="false"
            app:layout_constraintTop_toTopOf="@+id/exo_next" app:layout_constraintVertical_bias="0.0"/>
    <ImageButton
            android:background="@drawable/rounded_image_button"
            android:id="@+id/exo_play"
            android:padding="8dp"
            android:clickable="true"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:scaleType="fitEnd"
            android:layout_marginBottom="76dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/ic_play" app:layout_constraintStart_toEndOf="@+id/exo_prev"
            android:layout_marginStart="8dp" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/exo_next" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.625"
    />
    <ImageButton
            android:background="@drawable/rounded_image_button"
            android:clickable="true"
            android:padding="16dp"
            android:id="@+id/exo_pause"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="76dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/ic_pause" app:layout_constraintStart_toEndOf="@+id/exo_prev"
            android:layout_marginStart="8dp" android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintEnd_toStartOf="@+id/exo_next"
            app:layout_constraintHorizontal_bias="0.625"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline" app:layout_constraintGuide_begin="205dp"
                                                android:orientation="vertical"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline2" app:layout_constraintGuide_begin="-15dp"
                                                android:orientation="vertical"/>
</androidx.constraintlayout.widget.ConstraintLayout>