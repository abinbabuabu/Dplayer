<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
    <com.google.android.exoplayer2.ui.DefaultTimeBar android:layout_width="match_parent"
                                                     android:backgroundTint="@color/colorPrimaryDark"
                                                     android:background="@color/colorPrimaryDark"
                                                     android:visibility="visible"
                                                     android:id="@+id/exo_progress"
                                                     android:layout_height="wrap_content"
                                                     app:layout_constraintStart_toStartOf="parent"
                                                     android:layout_marginLeft="16dp"
                                                     android:layout_marginStart="16dp"
                                                     app:layout_constraintEnd_toEndOf="parent"
                                                     android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                                                     android:layout_marginTop="8dp"
                                                     app:layout_constraintTop_toTopOf="parent"
                                                     app:layout_constraintHorizontal_bias="0.0"
                                                     android:layout_marginBottom="8dp"
                                                     app:layout_constraintBottom_toTopOf="@+id/imageButton"
                                                     app:layout_constraintVertical_bias="0.873"/>
    <ImageButton
            android:background="#00000000"
            app:srcCompat="@drawable/ic_skip_next_black_24dp"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:scaleType="fitCenter"
            android:layout_marginEnd="56dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="56dp"
            android:layout_marginBottom="112dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageButton
            android:background="#00000000"

            app:srcCompat="@drawable/ic_skip_previous_black_24dp"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="PlayButton"
            android:layout_marginLeft="56dp" android:layout_marginStart="56dp" android:layout_marginBottom="112dp"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/imageButton"/>
    <ImageButton
            android:background="#00000000"
            android:id="@+id/exo_play"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:scaleType="fitEnd" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginBottom="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/ic_play_arrow_black_24dp"/>
    <ImageButton
            android:background="#00000000"
            android:id="@+id/exo_pause"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:scaleType="fitEnd" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginBottom="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/ic_pause_black_24dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>